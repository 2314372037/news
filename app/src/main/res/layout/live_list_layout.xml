<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/liveImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/liveTitle"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:text="面朝大海 春暖花开 正是踏春好时节"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/liveSource"
        android:layout_marginTop="1dp"
        android:text="网易原创"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/liveStateImg1"
        android:src="@mipmap/liveing"
        android:layout_width="35dp"
        android:layout_height="35dp" />
<LinearLayout
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/liveStateImg2"
        android:visibility="gone"
        android:src="@mipmap/livedone"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/liveState"
        android:textColor="@color/mainColor"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:text="正在直播"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:background="@drawable/liveuserdraw"
        android:layout_margin="6dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/liveuser"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/liveUserCount"
            android:text="373万人参与"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>