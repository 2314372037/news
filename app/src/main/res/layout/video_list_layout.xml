<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_video">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <ImageView
            android:id="@+id/videoImage"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/play"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="46dp"
            android:layout_width="46dp"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/videoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="加载中..."
            android:textColor="#f9f9f9"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/videoLength"
            android:text="00:00"
            android:textColor="#f9f9f9"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginStart="8dp"
            android:id="@+id/ib_voteCount"
            android:layout_width="32dp"
            android:layout_height="32dp">
            <TextView
                android:text="点赞"
                android:textSize="9dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/mainColor"
                android:id="@+id/voteCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/vote"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="8dp"
            android:id="@+id/ib_replyCount"
            android:layout_width="32dp"
            android:layout_height="32dp">
            <TextView
                android:text="评论"
                android:textSize="9dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/mainColor"
                android:id="@+id/replyCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/reply"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="8dp"
            android:id="@+id/ib_share"
            android:layout_width="32dp"
            android:layout_height="32dp">
            <ImageView
                android:src="@mipmap/more"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>